{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es6",
      "es2016",
      "es2017",
      "es2018",
      "es2015.promise",
      "es2015.generator",
      "es2015.reflect"
    ],
    "jsx": "react",
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "./src/**/*",
    "./types/**/*"
  ]
}
