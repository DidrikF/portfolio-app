{
  "compileOnSave": false,
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "lib": [
        "dom",
        "es5",
        "scripthost",
        "es6",
        "es2016",
        "es2017",
        "es2018",
        "es2015.promise",
        "es2015.generator",
        "es2015.reflect"
      ],
      "jsx": "react",
      "target": "es2016",
      "module": "es2015",
      "moduleResolution": "node",
      "removeComments": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "skipLibCheck": true
  },
  "exclude": [
    "node_modules/**/*"
  ]
}
