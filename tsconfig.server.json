{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
    },
    "exclude": [
        "./node_modules/**/*",
    ],
    "include": [
        "./server/**/*",
        "./types/**/*"
    ]
}